{
  "manifest_version": 2,
  "name": "PlayIt",
  "version": "2.2",
  "background": { "scripts": ["playit.js","rpc.js"] },
  "options_page": "options.html",
  "description": "PlayIt extension will send play video request to XBMC running on remote/local machine.",
  "browser_action": {
    "default_icon": "small-icon.png",
    "default_title": "Play video on XBMC",
    "update_url": "http://apple-tv2-xbmc.googlecode.com/svn/trunk/addons/service.playit.browser-extensions/chrome/auto-update.xml"
  },
  "permissions": [
    "http://*/*",
    "notifications",
    "tabs"
  ],
  "icons": {
    "16": "small-icon.png",
    "32": "Icon-32.png",
    "48": "Icon-48.png",
    "64": "Icon-64.png",
    "96": "Icon-96.png",
    "128": "Icon-128.png",
    "256": "Icon-256.png"
  }
}