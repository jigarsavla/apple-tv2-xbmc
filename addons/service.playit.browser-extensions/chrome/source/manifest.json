{
  "manifest_version": 2,
  "name": "PlayIt",
  "version": "2.5.1",
  "background": {
    "scripts": [
      "playit.js",
      "rpc.js"
    ]
  },
  "options_page": "options.html",
  "description": "PlayIt extension will send play video request to XBMC running on remote/local machine. Use add-on button or its context menu item.",
  "browser_action": {
    "default_icon": "small-icon.png",
    "default_title": "Play it on XBMC",
    "update_url": "http://apple-tv2-xbmc.googlecode.com/svn/trunk/addons/service.playit.browser-extensions/chrome/auto-update.xml"
  },
  "permissions": [
    "http://*/PlayIt",
    "notifications",
    "tabs",
    "contextMenus"
  ],
  "icons": {
    "16": "small-icon.png",
    "32": "Icon-32.png",
    "48": "Icon-48.png",
    "64": "Icon-64.png",
    "96": "Icon-96.png",
    "128": "Icon-128.png",
    "256": "Icon-256.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}